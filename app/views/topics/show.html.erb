<h1>
  <%= @topic.name %>
</h1>

<div class="row">
  <div class="span8">
    <p class="lead"><%= @topic.description %></p>
    <div class="row">
      <div class="span8">    
          <% if can? :create, Post %>
            <%= link_to "New Post", new_topic_post_path(@topic), class: 'btn btn-xs' %>
          <% end %>
          <% if can? :edit, @topic %>
            <%= link_to "Edit Topic", edit_topic_path(@topic), class: 'btn btn-xs' %>
          <% end %>
          <% if can? :destroy, @topic %>
          <%= link_to "Delete Topic", @topic, method: :delete, class: 'btn btn-xs btn-danger pull-right', confirm: 'Are you sure you want to delete this topic?' %>
          <% end %>
        </div>
    </div>
    <%= render @posts %>
    <%= will_paginate @posts %>
  </div>
</div>