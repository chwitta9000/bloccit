<h1>
  <%= @topic.name %>
</h1>

<div class="row">
  <div class="span8">
    <p class="lead"><%= @topic.description %></p>
    <div class="row">
      <div class="span8">    
          <% if can? :create, Post %>
            <%= link_to "New Post", new_topic_post_path(@topic), class: 'btn btn-large' %>
          <% end %>
          <% if can? :edit, @topic %>
            <%= link_to "Edit Topic", edit_topic_path(@topic), class: 'btn btn-large' %>
          <% end %>
          <% if can? :destroy, @topic %>
          <%= link_to "Delete Topic", @topic, method: :delete, class: 'btn btn-large btn-danger pull-right', confirm: 'Are you sure you want to delete this topic?' %>
          <% end %>
        </div>
    </div>
    <% @posts.each do |post| %>
      <div class="media">
        <div class="media-body">
          <h4 class="media-heading">
            <%= image_tag(post.postpic.thumb.url) if post.postpic? %> 
            <%= link_to (markdown post.title), [@topic, post] %>
          </h4>
          <small>
            <%= image_tag(post.user.avatar.tiny.url) if post.user.avatar? %>
            submitted <%= time_ago_in_words(post.created_at) %> ago by
            <%= post.user.name %></br>
            <%= post.comments.count %> Comments
          </small>
        </div>
      </div>
    <% end %>
    <%= will_paginate @posts %>
  </div>
</div>