<h1><%= markdown @post.title %>
</h1>

<div class="row"> 
  <div class="span8">
    <small>
      <%= image_tag(@post.user.avatar.tiny.url) if @post.user.avatar? %>
      submitted <%= time_ago_in_words(@post.created_at) %> ago by
      <%= @post.user.name %>
    </small>
    <p><%= markdown @post.body %></p>
    <p><%= image_tag(@post.postpic.url) if @post.postpic? %></p>
  </div>
  </hr>
  
  <div class="span8">
    <% if can? :edit, @post %>
      <%= link_to "Edit Post", edit_topic_post_path(@topic,@post), class: 'btn btn-large'%>
    <% end %>
    <% if can? :destroy, @post %>
      <%= link_to "Delete Post", [@topic, @post], method: :delete, class: 'btn btn-large btn-danger', confirm: "Are you sure you want to delete this post?"%>
    <% end %>

    <h2><%= @comments.count %> Comments</h2>

    <%= render @comments %>

    <% if can? :create, Comment %>
      </hr>
      <h4>New Comment</h4>
      <%= render partial: 'comments/form', locals: {topic: @topic, post: @post, comment: @comment} %>
    <% end %>
  </div>
</div>