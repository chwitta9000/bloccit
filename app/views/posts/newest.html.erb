<h1>Newest Posts</h1>
<p class= "lead">Most recent posts</p>

<div class="row">
  <div class="span8">
    <% posts_with_topics(@posts).each do |post| %>
      <div class="media">
        <div class="media-body">
          <h4 class="media-heading">
              <%= render partial: 'votes/voter', locals: {topic: post.topic, post: post} %>
              <%= link_to (markdown post.title), topic_post_path(post.topic, post)%>
          </h4>
          <small>
            submitted <%= time_ago_in_words(post.created_at) %> ago by
            <%= post.user.name %></br>
            <%= post.comments.count %> Comments
          </small>
        </div>
      </div>
    <% end %>
    <%= will_paginate @posts %>
  </div>
</div>